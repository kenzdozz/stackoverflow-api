{
  "name": "stackoverflow-api",
  "version": "1.0.0",
  "main": "src/app.js",
  "author": "Kenneth Onah",
  "license": "MIT",
  "scripts": {
    "test": "ENV_TEST=true mocha --require babel-register --exit",
    "cover": "nyc --reporter=text mocha --require babel-register --recursive --exit",
    "build": "babel ./ -d build --copy-files --ignore 'node_modules' ",
    "start": "yarn build && node build/app",
    "start:dev": "./node_modules/.bin/babel-watch src/app.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "json-request-validator": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.3",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1"
  },
  "eslintConfig": {
    "rules": {
      "no-underscore-dangle": 0
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  }
}
